<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.trc.mapper.shop.IShopMapper">

    <!-- 所有查询字段 -->
    <sql id="allSelectionColumn">
        id,
        warnPhone,
        phone,
        userId,
        shopName,
        channelCode,
        servicePhone,
        description,
        isDeleted,
        createTime,
        updateTime
    </sql>


    <!--多条件查询表信息(分页) -->
    <select id="selectListByParams" parameterType="org.trc.domain.shop.ShopDO" resultType="org.trc.domain.shop.ShopDO">
        SELECT
        <include refid="allSelectionColumn"/>
        FROM shop
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              = #{isDeleted}
            </if>
        </where>
    </select>
    <select id="selectCountByParams" parameterType="org.trc.domain.shop.ShopDO" resultType="int">
        SELECT COUNT(id) FROM shop
        <where>
            <if test="shopName != null">
                and shopName = #{shopName}
            </if>
            <if test="channelCode != null">
                and channelCode = #{channelCode}
            </if>
            <if test="isDeleted != null">
                and isDeleted = #{isDeleted}
            </if>
        </where>
    </select>

    <!-- 添加数据 -->
    <insert id="insert" parameterType="org.trc.domain.shop.ShopDO">
        <selectKey resultType="Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO shop(
        warnPhone,
        phone,
        userId,
        shopName,
        channelCode,
        servicePhone,
        description,
        isDeleted,
        createTime,
        updateTime
        )VALUES(
        #{warnPhone},
        #{phone},
        #{userId},
        #{shopName},
        #{channelCode},
        #{servicePhone},
        #{description},
        0,
        #{createTime},
        now())
    </insert>

    <!-- 根据ID更新信息-->
    <update id="updateById" parameterType="org.trc.domain.shop.ShopDO">
        UPDATE shop SET
        <if test="shopName != null and shopName != ''">
            shopName = #{shopName},
        </if>
        <if test="channelCode != null and channelCode != ''">
            channelCode = #{channelCode},
        </if>
        <if test="servicePhone != null and servicePhone != ''">
            servicePhone = #{servicePhone},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        <if test="isDeleted != null ">
            isDeleted = #{isDeleted},
        </if>
        <if test="createTime != null ">
            createTime = #{createTime},
        </if>
        updateTime = now()
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除数据-->
    <delete id="deleteById" parameterType="Long">
        DELETE FROM shop WHERE id = #{value}
    </delete>
</mapper>
